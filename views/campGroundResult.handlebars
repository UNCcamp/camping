{{#section 'head'}}
  <link rel="stylesheet" type="text/css" href="/assets/css/search.css">
{{/section}}
<div class="main">
<style>
#map {
    width: 600px;
    height: 500px;
}
</style>
<div class="col-md-offset-2 col-md-12"><h1>CAMPGROUND SEARCH RESULTS:</h1></div>
<div class="row">
   <div class="col-md-offset-3 col-md-3"><div id='map'></div></div>
   <div class="col-md-offset-2 col-md-12">
   <script id="trails-template" type="text/x-handlebars-template">
     {{#each result}}   
     <div class="col-md-12">
     <!-- CampGround Name -->
        <div class="col-md-4">{{this.result.name}}</div>
        <button type="button" class="col-md-2 btn btn-success">SAVE CAMPGROUND</button>
     </div>
  <!-- CampGround Image -->
  <div class="col-md-4"><img class="TrailMap" src={{this.campground.image}} alt="CampImage"></div>
  <!-- Camp Ground Info -->
  <div class="col-md-6">
    <div class="col-md-12">
      <!-- First Info like Description -->
      <div class="col-md-12">Description: {{this.campground.description}}</div>
      <!-- Second Info like Description -->
      <div class="col-md-12">Direction: {{this.campground.directions}}</div>
      <!-- Third Info like RV Friendly -->
      <div class="col-md-12">Latitude: {{this.campground.latitude}}</div>
      <div class="col-md-12">Longitude: {{this.campground.longitude}}</div>
    </div>
  </div>
     {{/each}}
     </script>
    </div>
</div>  {{!-- closes "row" --}}
  <!-- Content Here -->
{{!-- </div> --}}
<div class="row">

</div>
