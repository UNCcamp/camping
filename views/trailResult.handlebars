{{#section 'head'}}
  <link rel="stylesheet" type="text/css" href="/assets/css/search.css">
{{/section}}
<div class="main">
<style>
#map {
    width: 600px;
    height: 500px;
}
</style>
<div class="col-md-offset-2 col-md-12"><h1>TRAILS SEARCH RESULTS:</h1></div>
<div class="row">
   <div class="col-md-offset-3 col-md-3"><div  id='map'></div></div>
   <div class="col-md-offset-2 col-md-12">
   <div class="col-md-12">
    <!-- CampGround Name -->
    {{#each trails}}
  <div class="col-md-4">{{this.trail.name}}</div>
   <button type="button" class="col-md-2 btn btn-success">SAVE TRAIL</button>
   </div>
  <!-- CampGround Image -->
  <div class="col-md-4"><img class="TrailMap" src=src={{this.trail.image}} alt="CampImage"></div>
  <!-- Camp Ground Info -->
  <div class="col-md-6">
    <div class="col-md-12">
      <!-- First Info like Description -->
      <div class="col-md-12">Length: {{this.trail.length}}</div>
      <!-- Second Info like Description -->
      <div class="col-md-12">Latitude: {{this.trail.latitude}}</div>
      <!-- Third Info like RV Friendly -->
      <div class="col-md-12">Longitude: {{this.trail.longitude}}</div>
    </div>
  </div>
</div>

</div>
  <!-- Content Here -->
</div>
<div class="row">

</div>
{{#section 'footer'}}
<script type="text/javascript" src="/assets/js/apicalls.js"></script>
{{/section}}
